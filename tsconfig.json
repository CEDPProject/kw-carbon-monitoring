{
  "compilerOptions": {
    "resolveJsonModule": true,
    "strict": false,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "es2021"
    ],
    "target": "es6",
    "preserveValueImports": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "exclude": ["./node_modules"],
  "include": ["src/**/*", "src/service/.ts"]
}
